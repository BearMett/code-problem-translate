{
  "name": "vscode-problem-translator",
  "displayName": "Problem Translator",
  "description": "VS Code Problems 패널의 에러 메시지를 다양한 LLM(Ollama, OpenAI, Claude, Gemini)을 통해 번역합니다",
  "version": "0.1.0",
  "publisher": "problem-translator",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "translator",
    "korean",
    "ollama",
    "openai",
    "claude",
    "gemini",
    "diagnostics",
    "error translation",
    "llm"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "problemTranslator.translateAll",
        "title": "Problem Translator: Translate All Problems"
      },
      {
        "command": "problemTranslator.toggle",
        "title": "Problem Translator: Toggle Translation"
      },
      {
        "command": "problemTranslator.clearCache",
        "title": "Problem Translator: Clear Translation Cache"
      },
      {
        "command": "problemTranslator.showStatus",
        "title": "Problem Translator: Show Status"
      }
    ],
    "configuration": {
      "title": "Problem Translator",
      "properties": {
        "problemTranslator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic translation"
        },
        "problemTranslator.provider": {
          "type": "string",
          "default": "ollama",
          "enum": ["ollama", "openai", "claude", "gemini", "custom"],
          "enumDescriptions": [
            "Ollama (Local LLM) - Free, runs locally",
            "OpenAI (GPT-4o, GPT-4o-mini) - Requires API key",
            "Claude (Anthropic) - Requires API key",
            "Gemini (Google) - Requires API key",
            "Custom URL endpoint - For self-hosted or other APIs"
          ],
          "description": "Select the LLM provider for translations"
        },
        "problemTranslator.ollama.url": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL"
        },
        "problemTranslator.ollama.model": {
          "type": "string",
          "default": "qwen2.5:3b",
          "description": "Ollama model for translation",
          "examples": [
            "qwen2.5:3b",
            "qwen2.5:7b",
            "llama3.2:3b",
            "gemma2:2b",
            "mistral:7b"
          ]
        },
        "problemTranslator.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key"
        },
        "problemTranslator.openai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": ["gpt-4o", "gpt-4o-mini", "gpt-4-turbo", "gpt-3.5-turbo"],
          "description": "OpenAI model for translation"
        },
        "problemTranslator.openai.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI API base URL (for Azure OpenAI or proxies)"
        },
        "problemTranslator.openai.organization": {
          "type": "string",
          "default": "",
          "description": "OpenAI organization ID (optional)"
        },
        "problemTranslator.claude.apiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic Claude API key"
        },
        "problemTranslator.claude.model": {
          "type": "string",
          "default": "claude-3-haiku-20240307",
          "enum": ["claude-sonnet-4-20250514", "claude-3-5-sonnet-20241022", "claude-3-haiku-20240307", "claude-3-opus-20240229"],
          "enumDescriptions": [
            "Claude Sonnet 4 - Latest balanced model",
            "Claude 3.5 Sonnet - Fast and capable",
            "Claude 3 Haiku - Fastest, most affordable",
            "Claude 3 Opus - Most capable"
          ],
          "description": "Claude model for translation"
        },
        "problemTranslator.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API key"
        },
        "problemTranslator.gemini.model": {
          "type": "string",
          "default": "gemini-1.5-flash",
          "enum": ["gemini-1.5-flash", "gemini-1.5-pro", "gemini-2.0-flash-exp"],
          "enumDescriptions": [
            "Gemini 1.5 Flash - Fast and efficient",
            "Gemini 1.5 Pro - More capable",
            "Gemini 2.0 Flash (Experimental) - Latest experimental"
          ],
          "description": "Gemini model for translation"
        },
        "problemTranslator.custom.url": {
          "type": "string",
          "default": "",
          "description": "Custom LLM endpoint URL"
        },
        "problemTranslator.custom.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for custom endpoint (optional)"
        },
        "problemTranslator.custom.model": {
          "type": "string",
          "default": "",
          "description": "Model name for custom endpoint"
        },
        "problemTranslator.custom.requestFormat": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "ollama"],
          "enumDescriptions": [
            "OpenAI-compatible API format (chat/completions)",
            "Ollama-compatible API format (api/generate)"
          ],
          "description": "Request format for custom endpoint"
        },
        "problemTranslator.custom.headers": {
          "type": "object",
          "default": {},
          "description": "Additional HTTP headers for custom endpoint"
        },
        "problemTranslator.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "(Deprecated) Use problemTranslator.ollama.url instead",
          "deprecationMessage": "Use problemTranslator.ollama.url instead"
        },
        "problemTranslator.model": {
          "type": "string",
          "default": "qwen2.5:3b",
          "description": "(Deprecated) Use provider-specific model settings instead",
          "deprecationMessage": "Use problemTranslator.ollama.model, problemTranslator.openai.model, etc. instead"
        },
        "problemTranslator.targetLanguage": {
          "type": "string",
          "default": "Korean",
          "description": "Target language for translation"
        },
        "problemTranslator.displayMode": {
          "type": "string",
          "default": "both",
          "enum": [
            "original",
            "translated",
            "both"
          ],
          "enumDescriptions": [
            "Show only original messages",
            "Show only translated messages",
            "Show both original and translated messages"
          ],
          "description": "How to display diagnostic messages"
        },
        "problemTranslator.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Show translation in hover tooltip"
        },
        "problemTranslator.enableProblemsPanel": {
          "type": "boolean",
          "default": true,
          "description": "Show translated diagnostics in Problems panel"
        },
        "problemTranslator.cacheEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable translation caching"
        },
        "problemTranslator.cacheMaxSize": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of cached translations"
        },
        "problemTranslator.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before translating after diagnostics change"
        },
        "problemTranslator.sources": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Filter by diagnostic sources (e.g., ['ts', 'eslint']). Empty means all sources."
        },
        "problemTranslator.severities": {
          "type": "array",
          "default": [
            "Error",
            "Warning",
            "Information",
            "Hint"
          ],
          "items": {
            "type": "string",
            "enum": [
              "Error",
              "Warning",
              "Information",
              "Hint"
            ]
          },
          "description": "Filter by diagnostic severity"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT"
}
